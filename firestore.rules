rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    // Component library collections â€” read-only for authenticated users
    match /components/{document=**} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    match /stacks/{document=**} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    match /blueprints/{document=**} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    match /connectionTypes/{document=**} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    match /metricCategories/{document=**} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    match /_metadata/{document=**} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // Deny all by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
